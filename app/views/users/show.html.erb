<div class="contents">
        <div class="content">    
            <label>表示名</label>
            <h2><%= current_user.name %></h2>
        </div>
        <div class="content">
            <label>性別</label>
            <% if current_user.gender==1 %>
            <h2>男性</h2>
            <% else %>
            <h2>女性</h2>
            <% end %>
        </div>
        <div class="content">
            <label>年齢</label>
            <h2><%= current_user.age %>代</h2>
        </div>
        <div class="content">
            <label>居住区<label></label>
            <h2><%= current_user.prefecture %></h2>
        </div>
        <div class="content">
            <label>コメント</label>
            <h2><%= current_user.description %></h2>
        </div>
</div>
<%= link_to 'ユーザ情報を変更', edit_user_path(current_user.id) %>
