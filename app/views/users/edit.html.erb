<div>
  <%= form_for(@user) do  |f| %>
    <div class="form-group">
      <%= f.label :name, "表示名" %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.select :gender, [["男性",1],["女性",2]] %>
    </div>

    <div class="form-group">
        <%= f.select :age, [["10代",10],["20代",20],["30代",30],["40代",40],["50代",50]] %>
    </div>

    <div class="form-group">
      <%= f.label :prefecture, "地域" %>
      <%= f.text_field :prefecture, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description, "コメント" %>
      <%= f.text_field :description, autofocus: true, class: 'form-control' %>
    </div>



    <div class="form-group">
      <%= f.submit "送信", class: 'form-control btn btn-primary' %>
    </div>
  <% end %>
</div>
